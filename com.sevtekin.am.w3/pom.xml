							<W3-Module-Version>${w3ModuleVersion}</W3-Module-Version>
							<OS>${os.name}</OS>
							<OS-Version>${os.version}</OS-Version>
							<Built-By>${user.name}</Built-By>
						</manifestEntries>
					</archive>
					<workDirectory>../output/work</workDirectory>
