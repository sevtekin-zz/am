	<profiles>
		<profile>
			<id>dev-env</id>
			<activation>
				<property>
					<name>env</name>
					<value>DEV</value>
				</property>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.tomcat.maven</groupId>
						<artifactId>tomcat7-maven-plugin</artifactId>
						<version>2.1</version>
						<configuration>
							<server>deploy</server>
							<url>http://172.16.120.1:4004/manager/text</url>
							<path>/am</path>
						</configuration>
					</plugin>
				</plugins>
			</build>

		</profile>

		<profile>
			<id>prod-env</id>
			<activation>
				<property>
					<name>env</name>
					<value>PROD</value>
				</property>
